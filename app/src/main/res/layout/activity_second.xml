<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second"
    android:background="#2196F3">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:padding="15dp"
                android:layout_centerVertical="true"></ImageView>

            <ImageView
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/img"></ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Bandara di kota besar Indonesia"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:padding="10dp">
        </TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/img2"></ImageView>

            <TextView
                android:id="@+id/tx_1"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="140dp"
                android:justificationMode="inter_word"
                android:text="Bandara Soekarno-Hatta"
                android:paddingTop="20dp"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tx_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_1"
                android:layout_marginLeft="-27dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/img"
                android:paddingLeft="58dp"
                android:paddingTop="10dp"
                android:text="lokasi : Banten"
                android:textAllCaps="true"></TextView>

            <TextView
                android:id="@+id/tx_3"
                android:layout_width="254dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tx_2"
                android:layout_marginLeft="-25dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/img"
                android:paddingLeft="58dp"
                android:paddingTop="10dp"
                android:text="No telepon:+62 21 5505179 "
                android:textSize="15dp"></TextView>

            <Button
                android:id="@+id/btn2_pindah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-18dp"
                android:layout_marginTop="120dp"
                android:layout_toRightOf="@+id/tx_2"
                android:text="Detail"
                android:textSize="9dp"></Button>
        </RelativeLayout>



    </LinearLayout>

</ScrollView>